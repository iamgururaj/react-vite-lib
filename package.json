{
  "name": "@gururaj/react-vite-lib",
  "version": "1.0.2",
  "description": "A modern React component library built with Vite.",
  "author": "Your Name",
  "license": "MIT",
  "main": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly --project tsconfig.app.json && npm run postbuild",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "postbuild": "cpx \"src/components/common.css\" dist/",
    "pub": "npm run clean && npm run build && npm publish --access public"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
